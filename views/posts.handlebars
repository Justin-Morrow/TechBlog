{{> header/header-block-loggedIn}}
        <div>
            <div class="text-center card text-white bg-success mt-5 mb-3 rounded" id="card-posts" style="width: 70%;">
                <div class="card-header">
                    <h3 class="card-title">{{post.name}}</h3>
                </div>
                <div class="card-body">
                    <p class="card-text text-justify bg-transparent">{{post.description}}</p>
                </div>
                <div class="card-footer">
                    <h6 class="text-right font-italic">Created by: {{post.User.username}}{{post.createdAt}}</h6>
                </div>
                {{#if post.Comments}}
                <div class="card border-success mt-5" id="into-card" style="width: 100%;">
                    <div class="card-header bg-transparent border-success">
                        <h5 class="text-left font-italic">Comments:</h5>
                    </div>
                    <div class="card-body text-success text-justify">
                        <ul>
                            {{#each post.Comments}}
                            <li>
                                <p>{{body}}</p>
                                <p class="text-right font-italic" id="black-font" >Created by: {{User.username}}{{createdAt}}</p>
                            </li>
                            {{/each}}
                            </ul>
                            {{/if}}
                </div>
                <form class= "mt-3" id="create-comment-form">
                    <div class="" id="post-id" data-post={{post.id}} >
                        <textarea class="form-control is-invalid" id="validationTextarea" placeholder="Enter your comment" required></textarea>
                        <div class="invalid-feedback">
                        Please enter your comment in the text area.
                        </div>
                        <p class="text-right font-italic mr-3" id="black-font">Created by: {{User.username}} {{createdAt}} </p>
                        <a style="width: 30%;" id="my-comment-btn" class="btn btn-success font-weight-bolder mb-2">Post my comment</a>
                    </div>
                    </div>
                </form>
            </div>
                </div>
                </div>
            </div>



<script src='../../js/comments.js'></script>